@using LibaryPrograming.Models.Entity
@model List<TBLUYE>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index","Uye", FormMethod.Get))
            {
                <p>
                    Aranacak Uye Adı: @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }


<table class="table table-bordered">
    <tr>
        <th>UYE ID</th>
        <th>UYE ADI</th>
        <th>UYE SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Alert</th>
    </tr>
    <tbody>
        @foreach (var uye in Model)
        {
        <tr>
            <th>@uye.UYEID</th>
            <th>@uye.UYEAD</th>
            <td>@uye.UYESOYAD</td>
            <td><a href="/UYE/SIL/@uye.UYEID" class="btn btn-danger  ">SİL</a></td>
            <td><a href="/UYE/UyeGetir/@uye.UYEID" class="btn btn-success">GÜNCELLE</a></td>
            <td>@Html.ActionLink("SİL BUTONU", "SIL", new {id=uye.UYEID} ,new
           {
               @class = "btn btn-warning",
               onclick = "return confirm('Gerçekten silmek istiyor musunuz?')"
           })
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/UYE/YeniUye/" class="btn btn-primary">YENİ UYE EKLE</a>